<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/dish_img"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/dish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/dish_img"
        android:backgroundTint="@android:color/transparent"
        android:text="Add" />

    <TextView
        android:id="@+id/dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dish_img"
        android:layout_marginStart="4dp"
        android:drawableStart="@drawable/ic_veg"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="Spicy Prawn Tika"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dish_name"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="$220"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/price"
        android:layout_below="@+id/price"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="Lorum Ipsum Lorum Ipsum Lorum Ipsum Lorum Ipsum Lorum Ipsum Lorum Ipsum"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/text_small" />

</RelativeLayout>